{
  "openapi": "3.0.1",
  "info": {
    "title": "ProductConditionsAPI-UAT",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/product-conditions-api"
    }
  ],
  "paths": {
    "/v{version}/product-conditions": {
      "get": {
        "tags": [
          "Conditions"
        ],
        "summary": "Method for Product conditions",
        "parameters": [
          {
            "name": "productCode",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "nullable": true
            }
          },
          {
            "name": "productGroup",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "nullable": true
            }
          },
          {
            "name": "term",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "nullable": true
            }
          },
          {
            "name": "amount",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "nullable": true
            }
          },
          {
            "name": "categoryOfInterestRate",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/CategoryOfInterestRate"
            }
          },
          {
            "name": "modelOfInterestRate",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/MoldeOfIntereseRate"
              },
              "nullable": true
            }
          },
          {
            "name": "typeOfInterestRate",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/TypeOfInteresetRate"
              },
              "nullable": true
            }
          },
          {
            "name": "clientRating",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "currencyStatus",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/CurrencyStatus"
              },
              "nullable": true
            }
          },
          {
            "name": "currencyAcronim",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/CurrencyAcronim"
            }
          },
          {
            "name": "isClient",
            "in": "query",
            "schema": {
              "type": "boolean",
              "nullable": true
            }
          },
          {
            "name": "clientSector",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/ClientSector"
            }
          },
          {
            "name": "clientType",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/ClientType"
            }
          },
          {
            "name": "clientCategory",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/ClientCategory"
            }
          },
          {
            "name": "clientId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64",
              "nullable": true
            }
          },
          {
            "name": "meta.requestId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "meta.correlationId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "meta.processId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "meta.apiInternalLogId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "version",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductConditionResponseDto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Invalid data sent or exception encountered"
          },
          "503": {
            "description": "Critical exception encountered"
          }
        }
      }
    },
    "/v{version}/general-documents": {
      "get": {
        "tags": [
          "Documentation"
        ],
        "summary": "Method for Product General documents",
        "parameters": [
          {
            "name": "productId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "meta.requestId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "meta.correlationId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "meta.processId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "meta.apiInternalLogId",
            "in": "query",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "version",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GeneralDocumentResponseDto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          },
          "400": {
            "description": "Invalid data sent or exception encountered"
          },
          "503": {
            "description": "Critical exception encountered"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoryOfInterestRate": {
        "enum": [
          "Redovna",
          "Avista"
        ],
        "type": "string"
      },
      "MoldeOfIntereseRate": {
        "enum": [
          "KlasicniModel",
          "KombiniraniModel"
        ],
        "type": "string"
      },
      "TypeOfInteresetRate": {
        "enum": [
          "Fiksna",
          "PromjenjivaAdministrativna",
          "PromjenjivaTrzisna"
        ],
        "type": "string"
      },
      "CurrencyStatus": {
        "enum": [
          "HRK",
          "CVK",
          "JVK",
          "DEV"
        ],
        "type": "string"
      },
      "CurrencyAcronim": {
        "enum": [
          "AUD",
          "ATS",
          "CAD",
          "DKK",
          "DEM",
          "ITL",
          "JPY",
          "NLG",
          "NOK",
          "SEK",
          "CHF",
          "GBP",
          "USD",
          "XCS",
          "XSU",
          "BEF",
          "SIT",
          "HUF",
          "ESP",
          "CZK",
          "SKK",
          "EUR",
          "PLN",
          "BAM",
          "XAL",
          "RSD",
          "BGN",
          "RON",
          "TRY",
          "MKD",
          "AED",
          "RUB",
          "HRK",
          "SAR"
        ],
        "type": "string"
      },
      "ClientSector": {
        "enum": [
          "Retail",
          "Corporate"
        ],
        "type": "string"
      },
      "ClientType": {
        "enum": [
          "DomacaFizickaOsoba",
          "StranaFizickaOsoba",
          "StranaFizickaOsobaSDozvolomBoravka",
          "DomacaPravnaOsobaTvrtka",
          "DomacaPravnaOsobaObrtnik",
          "StranaPravnaOsoba"
        ],
        "type": "string"
      },
      "ClientCategory": {
        "enum": [
          "Standard",
          "Savjetodavni",
          "VIP",
          "PB"
        ],
        "type": "string"
      },
      "ConditionResponsDto": {
        "type": "object",
        "properties": {
          "productRateId": {
            "type": "integer",
            "format": "int64"
          },
          "productCodnitionId": {
            "type": "integer",
            "format": "int64"
          },
          "loanConditionId": {
            "type": "integer",
            "format": "int64"
          },
          "productRateDetailId": {
            "type": "integer",
            "format": "int64"
          },
          "rate": {
            "type": "number",
            "format": "double"
          },
          "termFrom": {
            "type": "integer",
            "format": "int32"
          },
          "termTo": {
            "type": "integer",
            "format": "int32"
          },
          "amountMinEur": {
            "type": "number",
            "format": "double"
          },
          "amountMaxEur": {
            "type": "number",
            "format": "double"
          },
          "amountMinHrk": {
            "type": "number",
            "format": "double"
          },
          "amountMaxHrk": {
            "type": "number",
            "format": "double"
          },
          "currencyStatusDescription": {
            "type": "string",
            "nullable": true
          },
          "rateTypeTitle": {
            "type": "string",
            "nullable": true
          },
          "rateCategoryTitle": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProductConditionResponseDto": {
        "type": "object",
        "properties": {
          "catalogID": {
            "type": "integer",
            "format": "int64"
          },
          "catalogCode": {
            "type": "string",
            "nullable": true
          },
          "productNameLocal": {
            "type": "string",
            "nullable": true
          },
          "productNameEnglish": {
            "type": "string",
            "nullable": true
          },
          "conditionList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ConditionResponsDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GeneralDocumentResponseDto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "productCode": {
            "type": "string",
            "nullable": true
          },
          "productTitle": {
            "type": "string",
            "nullable": true
          },
          "documentId": {
            "type": "integer",
            "format": "int32"
          },
          "documentType": {
            "type": "string",
            "nullable": true
          },
          "validFrom": {
            "type": "string",
            "format": "date-time"
          },
          "documentUrl": {
            "type": "string",
            "nullable": true
          },
          "documentTitle": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}